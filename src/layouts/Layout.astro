---
interface Props {
	title: string;
	description: string;
	pageType?:"website" | "article";
	image: string
	imageAlt: string
}

const head: Props = Astro.props;

import Container from '../components/atoms/Container.astro';
import BaseMeta from '../components/BaseMeta.astro';
import Header from '../components/organisms/header.astro';
import "../styles/global.css";
---

<!Doctype html>
<html lang="ja">
	<head>
		<BaseMeta {...head}/>
	</head>
	<body class="text-base text-gray-700">
		<!--<Header /> -->
		<Container>
			<main>
				<slot />
			</main>
		</Container>
	</body>
</html>